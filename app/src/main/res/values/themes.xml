<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Ram" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/light_system_bars</item>

        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">
            @bool/light_system_bars
        </item>
    </style>

    <style name="Theme.Ram.Splash" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/light_system_bars</item>

        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">
            @bool/light_system_bars
        </item>

        <item name="postSplashScreenTheme">@style/Theme.Ram</item>
    </style>

</resources>
