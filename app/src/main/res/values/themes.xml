<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme -->
    <style name="Platform.V24.Theme.Rickandmorty" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Platform.Theme.Rickandmorty" parent="Platform.V24.Theme.Rickandmorty" />

    <style name="Theme.Rickandmorty" parent="Platform.Theme.Rickandmorty">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/light_system_bars</item>
    </style>

    <!-- Splash theme -->
    <style name="Platform.V24.Theme.Rickandmorty.Splash" parent="Theme.SplashScreen">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Platform.Theme.Rickandmorty.Splash" parent="Platform.V24.Theme.Rickandmorty.Splash" />

    <style name="Theme.Rickandmorty.Splash" parent="Platform.Theme.Rickandmorty.Splash">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/light_system_bars</item>

        <item name="postSplashScreenTheme">@style/Theme.Rickandmorty</item>
    </style>

</resources>
